function tmd() {
    tmux new-session -d -s dev
    tmux split-window -h -p 10
    tmux select-pane -t 0
    tmux attach-session -t dev
}

function acp() {
  git add .
  git commit -m "$1"
  git push
}

function cpd() {
    dir=`pwd`
    str=${dir//\//\\/}
    sed -i 's/^export LATESTPROJDIR=.*/export LATESTPROJDIR='$str'/' $HOME/.config/zsh/.zsh_profile
    echo "Updated reference: "$str
    source $HOME/.config/zsh/.zsh_profile
}

